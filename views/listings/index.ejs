<% layout("/layouts/boilerplate") %>

<style>
    #filters-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
    }

    /* Medium Screens (Dropdown for Extra Categories) */
    @media (max-width: 992px) {
        #filters {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            overflow-x: auto;
            max-width: 80%;
        }

        #dropdownMenu {
            display: block;
        }
    }

    /* Small Screens (Toggle Sidebar) */
    @media (max-width: 768px) {
        #filters {
            display: none; /* Hide default categories */
        }

        #toggleMenu {
            display: block;
        }
    }

    .filter {
        text-align: center;
        margin-right: 1rem;
        margin-top: 1rem;
        opacity: 0.85;
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }

    .filter a {
        font-size: 0.9rem;
        text-decoration: none;
        color: gray;
    }

    .filter i {
        color: gray;
        font-size: 1.2rem;
    }

    /* Sidebar for Small Screens */
    #sidebar {
        position: fixed;
        top: 0;
        left: -250px;
        width: 250px;
        height: 100%;
        background: white;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
        transition: left 0.3s ease;
        padding: 1rem;
        z-index: 1000;
    }

    #sidebar.active {
        left: 0;
    }

    #closeSidebar {
        cursor: pointer;
        font-size: 1.5rem;
    }
</style>

<div id="filters-container">
    <!-- Normal Filters -->
    <div id="filters">
        <% let categories = [
            { name: "Trending", icon: "fa-fire", link: "/listings/category/trending" },
            { name: "Rooms", icon: "fa-bed", link: "/listings/category/rooms" },
            { name: "Iconic Cities", icon: "fa-mountain-city", link: "/listings/category/iconic_cities" },
            { name: "Mountains", icon: "fa-mountain", link: "/listings/category/mountains" },
            { name: "Castles", icon: "fa-fort-awesome", link: "/listings/category/castles" },
            { name: "Amazing Pools", icon: "fa-person-swimming", link: "/listings/category/amazing_pools" },
            { name: "Camping", icon: "fa-campground", link: "/listings/category/camping" },
            { name: "Farms", icon: "fa-tractor", link: "/listings/category/farms" },
            { name: "Arctic", icon: "fa-snowflake", link: "/listings/category/arctic" },
            { name: "Domes", icon: "fa-igloo", link: "/listings/category/domes" },
            { name: "Boats", icon: "fa-ship", link: "/listings/category/boats" }
        ]; %>

        <% categories.slice(0, 6).forEach(category => { %>
        <div class="filter">
            <a href="<%= category.link %>">
                <i class="fa-solid <%= category.icon %>"></i>
                <p><%= category.name %></p>
            </a>
        </div>
        <% }); %>
    </div>

    <!-- Dropdown for Extra Categories (Medium Screens) -->
    <div id="dropdownMenu" class="dropdown" style="display: none;">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
            More Categories
        </button>
        <ul class="dropdown-menu">
            <% categories.slice(6).forEach(category => { %>
            <li><a class="dropdown-item" href="<%= category.link %>"><i class="fa-solid <%= category.icon %>"></i> <%= category.name %></a></li>
            <% }); %>
        </ul>
    </div>

    <!-- Toggle Sidebar Button (Small Screens) -->
    <button id="toggleMenu" class="btn btn-outline-secondary" style="display: none;">
        <i class="fa-solid fa-bars"></i> Categories
    </button>
</div>

<!-- Sidebar for Small Screens -->
<div id="sidebar">
    <span id="closeSidebar">&times; Close</span>
    <ul class="list-unstyled mt-3">
        <% categories.forEach(category => { %>
        <li class="mb-2">
            <a href="<%= category.link %>" class="text-decoration-none text-dark">
                <i class="fa-solid <%= category.icon %>"></i> <%= category.name %>
            </a>
        </li>
        <% }); %>
    </ul>
</div>

<script>
    // Sidebar Toggle Logic
    let toggleMenu = document.getElementById("toggleMenu");
    let sidebar = document.getElementById("sidebar");
    let closeSidebar = document.getElementById("closeSidebar");

    if (toggleMenu) {
        toggleMenu.addEventListener("click", () => {
            sidebar.classList.add("active");
        });

        closeSidebar.addEventListener("click", () => {
            sidebar.classList.remove("active");
        });
    }
</script>
