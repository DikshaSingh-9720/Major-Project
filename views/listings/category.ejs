<% layout("/layouts/boilerPlate") %>


<style>
    a{
        text-decoration: none;
        color: black;
    }
</style>

<h2 class="mb-3 mt-4 text-center">Listings for <%= category %></h2>

<% if (listings.length > 0) { %>  
    
    <div class="row  mt-4" id="listingItems">
        <% listings.forEach((listing) => { %>  
           
            <div class="col-md-4 mt-4 mb-4">
                <a href="/listings/<%= listing._id %>">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url%>" class="card-img-top mt-4 mb-3" alt="<%= listing.title %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                    </a>
                    </div>
                </div>
            </div>
       

        <% }); %>  
    </div>  
<% } else { %>  
    <h3 class="text-center text-danger mt-4">Listings are not available</h3>
<% } %>